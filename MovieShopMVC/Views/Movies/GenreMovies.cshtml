@using ApplicationCore.Models
@model PagedResultSet<MovieCardModel>

<div class="rounded">
    <div class="container-fluid">
        <div class="row">

            @foreach (var movieCard in Model?.Data)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2">
                    <partial name="_MovieCard" model="movieCard" />
                </div>
            }

        </div>
    </div>
</div>

@{
    var prevDisable = !Model.HasPreviousPage ? "disabled" : ""; // if model has no previous page, model get "" value
    var nextDisable = !Model.HasNextPage ? "disabled" : ""; // if model has no next page, model get "" value
}

<a asp-action="GenreMovies" asp-route-page="@(Model.PageIndex-1)" class="btn btn-primary @prevDisable">Previous</a>
<a asp-action="GenreMovies" asp-route-page="@(Model.PageIndex+1)" class="btn btn-primary @nextDisable">Next</a>
