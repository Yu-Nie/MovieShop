@model List<ApplicationCore.Models.MovieCardModel>

@{
    ViewData["Title"] = "Home Page";
}

@*Display top 30 highest grossing movies, as movie cards *@

<div class="rounded">
    <div class="container-fluid">
        <div class="row">

            @foreach (var movieCard in Model)
            {
                <div class="col-6 col-lg-3 col-sm-4 col-xl-2"> @*col-xl-2 extra large screen take 2 spaces for each col *@
                    @*<partial name="_MovieCard" model="movieCard" />*@
                
                <div class="card mb-4">
                    <a>
                        <img src="@movieCard.PosterUrl" class=" img-fluid"/>
                    </a>
                </div>
                </div>
            }

        </div>
    </div>
</div>
